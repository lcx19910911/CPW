@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "收款查询";
}

<div class="am-cf am-padding">
    <div class="am-fl am-cf"><a href="/"><strong class="am-text-primary am-text-lg">首页</strong></a> /<small>收款查询</small></div>
</div>
<div id="searchDomain">

    <div class="am-g">
        <div class="am-u-lg-9 am-u-end">
            <div class="am-input-group am-input-group-sm">
                <span class="am-input-group-label">标题：</span>
                <input type="text" class="am-form-field" placeholder="按姓名搜索" style="width:100px;" name="title" ;>
                <span class="am-input-group-label  am-margin-left-sm">发布日期</span>
                <input type="text" class="am-form-field" placeholder="请选择日期" name="pushTimeStart" readonly style="width:100px;">
                <span class="am-input-group-label"> - </span>
                <input type="text" class="am-form-field" placeholder="请选择日期" name="pushTimeEnd" readonly style="width:100px;">
                <span class="am-input-group-btn am-margin-left-sm">
                    <button class="am-btn am-btn-default" id="btnSearch" type="button">搜索</button>
                    <button class="am-btn am-btn-default" onclick="ClearFilter()" type="button">清除</button>
                </span>
            </div>
        </div>


    </div>


    <div class="am-g am-margin-top-sm">
        <div class="am-u-lg-6">
            <div class="am-btn-toolbar">
                <div class="am-btn-group am-btn-group-xs">
                    <button onclick="batchDelete()" type="button" class="am-btn am-btn-default"><span class="am-icon-trash-o"></span> 删除</button>
                </div>
            </div>
        </div>

    </div>

</div>
<div class="grid_container">
    <table id="dataTable" class="am-table am-table-compact am-table-hover table-main">
        <thead>
            <tr>
                <th dataname="ID" type="checkbox"></th>
                <th type="more"></th>
                <th dataname="PayTime" datatype="jsondate">缴费日期</th>
                <th dataname="EnteredDate" datatype="jsondate">报名日期</th>
                <th dataname="MakeDriverShopName">制卡驾校</th>
                <th dataname="Money">总价</th>
                <th dataname="HadPayMoney">已缴</th>
                <th dataname="PayMoney">本次缴费</th>
                <th dataname="PayTypeName">支付方式</th>
                <th dataname="Name">姓名</th>
                <th dataname="IDCard">身份证</th>
                <th dataname="Mobile">电话号码</th>
                <th dataname="CertificateName">车型</th>
                <th dataname="ReferenceName">推荐人</th>
                <th dataname="CreaterName">登记人</th>
                <th dataname="ConfirmUserName">确认人</th>
                <th render="ShowConfirm">确认情况</th>
                <th render="ShowState">学员状态</th>
                <th render="ShowStudentFlag">学员是否删除</th>
                <th dataname="CreaterName" isHide="1" style="display:none;">登记人</th>
                <th dataname="ConfirmDate" datatype="jsondateNo" isHide="1" style="display:none;">确认日期</th>
                <th type="eventlist"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
@section scripts
{
    <script type="text/javascript">

        $('[name=plushTimeStart]').datepicker({ format: 'yyyy-mm-dd' });
        $('[name=plushTimeEnd]').datepicker({ format: 'yyyy-mm-dd' });

        function ClearFilter() {
            $("#searchDomain input").val(""); $('#searchDomain select').each(function () {
                $(this).find('option').eq(0).attr('selected', true);
            })
        }
        //批量删除
        function batchDelete() {
            $.Nuoya.confirm("确认删除？", function () {
                grid.del({
                    ajaxUrl: "/Image/Delete",
                    callback: function (json) {
                        grid.reload();
                    }
                });
            });
        }


        function formInit(dataitem) {

            if (dataitem != null) {
                //$('#payForm [name=PayTime]').datetimepicker('update', RenderDate(dataitem.PayTime));
                if (dataitem.Path != null) {
                    if (dataitem.Path != null) {
                        $("#imageDiv").show().find("img").attr("src", dataitem.Path);
                    }

                }
            }

            $.Nuoya.form("form").validate({
                rules: {
                    Title: {
                        required: true,
                        maxlength: 32
                    },
                    PushTime: {
                        required: true
                    },
                    Path: {
                        required: true
                    }
                },
                messages: {
                    Title: {
                        required: "不允许为空",
                        maxlength: "最多{0}个字符"
                    },
                    PushTime: {
                        required: "请选择发布时间"
                    },
                    Path: {
                        required: "请上传图片"
                    }
                }
            });

        }

        var grid = $.Nuoya.grid({
            tableId: "dataTable",
            //表格id
            search: {
                domainId: "searchDomain",
                subId: "btnSearch"
            },
            isHide: true,
            ajaxUrl: "/Image/GetPageList",
            //数据请求地址

            events: [
               {
                   className: "am-text-secondary",
                   icon: "icon-pencil-square-o",
                   name: "修改",
                   click: function (item) {
                       $.Nuoya.ajaxDialog({
                           closeViaDimmer: false,
                           ajaxUrl: "/HtmlTemplates/Image/Update.html",
                           title: "修改图片",
                           width: "1000px",
                           height: "620px",
                           callback: function (e) {
                               $.Nuoya.action("/Image/Find", { id: item.ID }, function (model) {
                                   //载入数据
                                   $.Nuoya.form("form").dataLoad({
                                       data: model
                                   });
                                   formInit(model);//表单初始化
                               });
                           },
                           buttons: [{
                               label: "保存",
                               callback: function (e) {

                                   $.Nuoya.form("form").ajaxSubmit({
                                       ajaxUrl: "/Image/Update",
                                       params: {
                                           ID: item.ID
                                       },
                                       callback: function (data) {
                                           if (!data.ErrorDesc) {
                                               e.hide();
                                               grid.reload();
                                           }
                                           else
                                               $.Nuoya.alert(data.ErrorDesc);
                                       }
                                   });
                               }
                           }]
                       })
                   }
               },
               {
                   className: "am-text-secondary",
                   icon: "icon-pencil-square-o",
                   name: "查看",
                   click: function (item) {                      
                       window.location.href = "/Image/Detial?id=" + item.id;
                   }
               },
                {
                    className: "am-text-danger",
                    icon: "icon-trash-o",
                    name: "删除",
                    url: "/Image/Delete",
                    click: function (item) {
                        $.Nuoya.confirm("确认删除？", function () {
                            $.Nuoya.deleteAction("/Image/Delete", {
                                ids: item.ID
                            },
                            function () {
                                grid.reload();
                            });
                        });
                    }
                }
            ]
        });
    </script>
}
